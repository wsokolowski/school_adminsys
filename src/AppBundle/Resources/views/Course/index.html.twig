{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Course list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Course</th>
                <th>Teacher</th>
                <th>Classes left</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('course_show', { 'id': entity.id }) }}">{{ entity.type }} {{ entity.level }}</a></td>
                <td>{{ entity.teacher }}</td>
                <td>{{ entity.numOfClassesLeft}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('course_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('course_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('course_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
